#:kivy 1.0

<PredictionApp>:
    orientation: 'vertical'

    Spinner:
        id: sidebar
        text: 'Home'
        values: ('Home', 'About Project', 'Prediction')
        size_hint_y: None
        height: 40
        on_text: root.on_sidebar_change(self, self.text)

<Label>:
    font_size: '20sp'
    halign: 'center'
    valign: 'middle'
    text_size: self.size
    size_hint_y: None
    height: self.texture_size[1]

<Image>:
    size_hint: None, None
    size: 400, 400
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

